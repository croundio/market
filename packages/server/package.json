{
  "name": "@market/server",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/db/cli/typeorm.ts",
    "db:seeds": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed --configName src/config/db.ts",
    "db:generate": "npm run typeorm migration:generate",
    "db:migrate": "npm run typeorm migration:run",
    "db:create": "npm run typeorm migration:create",
    "db:revert": "npm run typeorm migration:revert",
    "db:drop": "npm run typeorm schema:drop",
    "db:reset": "npm run db:drop && npm run db:migrate && npm run db:seeds",
    "generate:postman": "openapi2postmanv2 -s ./docs/swagger-spec.json -o ./postman/collection.json -p -O folderStrategy=Tags,requestParametersResolution=Example,optimizeConversion=false,stackLimit=50",
    "generate:api": "openapi-generator-cli generate --enable-post-process-file -i ./docs/swagger-spec.json -g typescript-axios --type-mappings=DateTime=Date --additional-properties=enumPropertyNaming=original,modelPropertyNaming=original,npmName=@market/server-api -o ../server-api && sed -i '' 's+./dist+dist+g' ../server-api/package.json"
  },
  "dependencies": {
    "@nestjs/common": "9.2.1",
    "@nestjs/core": "9.2.1",
    "@nestjs/jwt": "10.0.1",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.2.1",
    "@nestjs/swagger": "6.1.4",
    "@nestjs/typeorm": "9.0.1",
    "@openapitools/openapi-generator-cli": "2.5.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "openapi-to-postmanv2": "4.5.0",
    "passport": "0.6.0",
    "passport-google-oauth2": "0.2.0",
    "passport-jwt": "4.0.1",
    "pg": "8.8.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.8.0",
    "typeorm": "0.3.11",
    "typeorm-seeding": "1.6.1",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.5",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.2.1",
    "@types/express": "4.17.15",
    "@types/jest": "28.1.4",
    "@types/node": "18.11.17",
    "@types/passport-google-oauth2": "0.1.5",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "28.1.2",
    "prettier": "2.8.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "28.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
